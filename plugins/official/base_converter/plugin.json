{
    "name": "base_converter",
    "version": "1.5.0",
    "description": "Plugin pour convertir des nombres entre différentes bases et ASCII",
    "author": "MysterAI",
    "plugin_type": "python",
    "entry_point": "main.py",
    "dependencies": [],
    "categories": ["Conversion", "Encoder", "Decoder", "Base", "ASCII"],
    "brute_force": true,
  
    "input_types": {
      "input_text": {
        "type": "string",
        "label": "Texte à convertir",
        "placeholder": "Entrez un nombre ou du texte à convertir"
      },
      "mode": {
        "type": "select",
        "label": "Mode",
        "options": ["encode", "decode", "autodetect"],
        "default": "decode"
      },
      "source_base": {
        "type": "select",
        "label": "Base source",
        "options": ["2", "8", "10", "16", "36", "64", "ascii"],
        "default": "16"
      },
      "target_base": {
        "type": "select",
        "label": "Base cible",
        "options": ["2", "8", "10", "16", "36", "64", "ascii"],
        "default": "ascii"
      },
      "strict": {
        "type": "select",
        "label": "Mode strict",
        "options": ["strict", "smooth"],
        "default": "smooth"
      },
      "embedded": {
        "type": "boolean",
        "label": "Rechercher des fragments",
        "default": false
      },
      "enable_gps_detection": {
        "type": "boolean",
        "label": "Activer la détection GPS",
        "default": true
      }
    },
    "output_types": {
      "result": {
        "type": "string",
        "label": "Résultat de la conversion"
      }
    }
  }