{
    "name": "hexadecimal_encoder_decoder",
    "version": "1.2.0",
    "description": "Plugin pour coder et décoder du texte en hexadécimal",
    "author": "MysterAI",
    "plugin_type": "python",
    "entry_point": "main.py",
    "dependencies": [],
    "categories": ["Encoder", "Decoder", "Hexadecimal"],
    "brute_force": false,
  
    "input_types": {
      "text": {
        "type": "string",
        "label": "Texte à traiter",
        "placeholder": "Entrez un texte à coder ou décoder"
      },
      "mode": {
        "type": "select",
        "label": "Mode",
        "options": ["encode", "decode"],
        "default": "decode"
      },
      "strict": {
          "type": "select",
          "label": "Mode strict",
          "options": ["strict", "smooth"],
          "default": "smooth"
      },
      "enable_gps_detection": {
        "type": "boolean",
        "label": "Activer la détection GPS",
        "default": true
      }
    },
    "output_types": {
      "result": {
        "type": "string",
        "label": "Résultat de l'opération"
      }
    }
  }